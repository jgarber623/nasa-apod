<article class="h-entry" id="post-{{ date | date: dates.iso8601 }}">
  <div class="e-content">
    <figure>
      <img src="{{ data.image_url }}" alt="{{ data.title }}" aria-details="post-{{ date | date: dates.iso8601 }}" class="u-photo">

      <figcaption>
        <p><b>Credit and <a href="https://apod.nasa.gov/apod/lib/about_apod.html#srapply">copyright</a>:</b> {{ data.credit }}</p>
      </figcaption>
    </figure>

    <div id="post-{{ date | date: dates.iso8601 }}">{{ content }}</div>
  </div>

  <hr>

  <footer>
    <p>
      <small>
        <a href="{{ data.canonical_url }}" rel="canonical" class="p-name u-uid u-url">{{ data.title }}</a> was published on <time class="dt-published" datetime="{{ date | date }}">{{ date | date: dates.display }}</time>.
        {%- if data.hd_image_url %}
        A <a href="{{ data.hd_image_url }}">high resolution version</a> is available on <a href="https://apod.nasa.gov" rel="home">apod.nasa.gov</a>.
        {%- endif %}
      </small>
    </p>
  </footer>
</article>
